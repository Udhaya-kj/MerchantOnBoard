<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/padding_4dp"
    android:layout_marginTop="@dimen/padding_3dp"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@drawable/crown_layout"
        android:layout_width="@dimen/height_50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/height_30dp"
            android:layout_height="@dimen/height_30dp"
            android:layout_gravity="center"
            android:src="@drawable/group_536" />

        <TextView
            android:id="@+id/text_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_voucher"
        android:background="@drawable/voucher_bg"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_5dp"
        >

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTop_10dp"
            android:textSize="@dimen/text_size_15sp"
            android:singleLine="true"
            android:maxLines="1"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTop_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="#2897BE"
                android:padding="@dimen/padding_2dp"
                android:layout_marginTop="@dimen/padding_2dp"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginTop_10dp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:text="to" />

            <TextView
                android:id="@+id/to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTop_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginTop_10dp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:text="to" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_25sp"
            android:layout_marginLeft="@dimen/marginTop_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/sunday"
                android:layout_width="@dimen/text_size_25sp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="Sun"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_8dp" />

            <TextView
                android:id="@+id/monday"
                android:layout_width="@dimen/text_size_25sp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Mon"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_8dp" />

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="@dimen/text_size_25sp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Tue"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_8dp" />

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="@dimen/text_size_25sp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Wed"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_8dp" />

            <TextView
                android:id="@+id/thursday"
                android:layout_width="@dimen/text_size_25sp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Thu"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_8dp" />

            <TextView
                android:id="@+id/friday"
                android:layout_width="@dimen/text_size_25sp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Fri"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_8dp" />

            <TextView
                android:id="@+id/saturday"
                android:layout_width="@dimen/text_size_25sp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Sat"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_8dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>