<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools"
    android:id="@+id/layout_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50dp"
        android:background="@color/button_background"
        android:elevation="@dimen/margin_5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_weight="0.2"
            android:background="@android:color/transparent"
            android:foreground="?actionBarItemBackground"
            android:padding="7dp"
            android:src="@drawable/ic_arrow_32dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_8dp"
            android:text="Setup"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp" />


    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/grey"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:gravity="center"
                android:paddingTop="@dimen/marginTop_10dp"
                android:paddingBottom="@dimen/marginTop_10dp"
                android:text=" You are almost done! \n Review the details and submit"
                android:textColor="@color/matt_black"
                android:textSize="@dimen/text_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_design_bottom"
                android:orientation="vertical"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Business Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:text="Business Name"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_buss_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Address"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_add1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/text_add2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/text_add3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/text_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/text_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Registration No"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_reg_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Business Type"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_buss_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/textview_biz_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Business Competitors"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_competitors_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:layout_marginTop="@dimen/text_size_22dp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Contact Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Contact Name"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Email"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Mobile No"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_mob_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:layout_marginTop="@dimen/text_size_22dp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Customer Display Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Business Display Name"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_disp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="About Business"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_intro_buss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Contact Number"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_phn_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Website"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Operating hours"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_operating_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Location"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linear_map"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_250dp"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:background="@drawable/review_map_border">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        map:liteMode="true" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="Logo"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="@dimen/height_170dp"
                    android:layout_height="@dimen/height_170dp"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/marginTop_10dp"
                    android:background="@color/button_background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/padding_2dp"
                        android:background="@color/white">
                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:layout_marginBottom="@dimen/marginTop_10dp"
                    android:background="@drawable/imageview_border"
                    >
                    <ImageView
                        android:id="@+id/image_logo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#F9F9F9"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        app:layout_constraintDimensionRatio="H,16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.842"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center|left"
                    android:text="QR Status"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/text_qr_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:layout_marginTop="@dimen/text_size_22dp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Points Setup"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="Min purchase for points issuance : "
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_min_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_points_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="No.of points issued for "
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_points_per_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:layout_marginBottom="@dimen/marginTop_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="Points Expires in (days) : "
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_points_expires"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="180"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/voucher_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="Redemption Voucher(s)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_vouchers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:layout_marginBottom="@dimen/marginTop_10dp"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical"
                    android:visibility="visible"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/next_button_50dp"
        android:background="@drawable/btn_click_effect"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="@dimen/height_30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="@dimen/height_30dp"
            android:clickable="false"
            android:padding="@dimen/marginTop_10dp"
            android:src="@drawable/r_arrow"
            android:tint="@color/white"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>