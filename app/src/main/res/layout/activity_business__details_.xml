<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50dp"
        android:background="@color/button_background"
        android:orientation="horizontal"
        android:elevation="@dimen/margin_8dp"
        android:weightSum="2">

        <ImageView
            android:background="@android:color/transparent"
            android:foreground="?actionBarItemBackground"
            android:id="@+id/back_arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_weight="0.2"
            android:padding="7dp"
            android:src="@drawable/ic_arrow_32dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center_vertical"
            android:text="Setup"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/margin_8dp"
            android:textSize="@dimen/text_size_18sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:nestedScrollingEnabled="false"
            android:padding="@dimen/page_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Business Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                     />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30dp"
                    android:gravity="center_vertical"
                    android:text="Business Full Name"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:id="@+id/edit_bussiness_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:inputType="text"
                    android:maxLength="30"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter at least 5 characters"
                    android:textColor="@color/grey_d"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Address1"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/edit_bussiness_add1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_address1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Enter at least 10 characters"
                        android:textColor="@color/grey_d"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/address1_watcher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="end"
                        android:text="0/50"

                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Address2 (optional)"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/edit_bussiness_add2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_address2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Enter at least 10 characters"
                        android:textColor="@color/grey_d"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/address2_watcher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="end"
                        android:text="0/50"

                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>





                <TextView
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Address3 (optional)"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/edit_bussiness_add3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_address3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Enter at least 10 characters"
                        android:textColor="@color/grey_d"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/address3_watcher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="end"
                        android:text="0/50"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>


                <TextView
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Postal Code"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/edit_bussiness_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:text="Country"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/text_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="center_vertical"
                    android:maxLength="12"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Registration No"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:id="@+id/edit_bussiness_reg_no"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:gravity="center_vertical"
                    android:text="Business type"
                    android:textSize="@dimen/text_size_16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border">

                    <Spinner
                        android:id="@+id/spinner_buss_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dialog" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/text_size_22dp"
                    android:text="Contact Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title"
                     />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center_vertical"
                    android:text="How to we address you?"
                    android:textSize="@dimen/text_size_16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border">

                    <Spinner
                        android:id="@+id/spinner_prefix"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dialog"

                        />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center_vertical"
                    android:text="Contact Name"
                    android:textSize="@dimen/text_size_16sp" />


                <EditText
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/edit_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="200"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:gravity="center_vertical"
                    android:text="Email Address"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:background="@drawable/edittext_border"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/edittext_paddingLeft"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/page_padding"
                    android:layout_marginTop="@dimen/marginTop_10dp"
                    android:text="This email will be used for all communications"
                    android:textStyle="italic" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_next_business_det"
        android:layout_width="match_parent"
        android:layout_height="@dimen/next_button_50dp"
        android:background="@drawable/btn_click_effect"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:background="@android:color/transparent"
            android:text="Next"
            android:clickable="false"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white" />
        <ImageView
            android:layout_width="@dimen/height_30dp"
            android:layout_height="match_parent"
            android:src="@drawable/r_arrow"
            android:tint="@color/white"
            android:clickable="false"
            android:layout_marginLeft="-5dp"
            android:padding="@dimen/marginTop_10dp"
            android:layout_marginRight="@dimen/height_30dp"
            />
    </LinearLayout>

</LinearLayout>