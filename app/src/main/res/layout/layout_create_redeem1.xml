<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/marginTop_10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_4dp">

        <LinearLayout
            android:layout_width="@dimen/height_40dp"
            android:layout_height="@dimen/height_40dp"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@drawable/round_edge_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/marginTop_20dp"
                android:layout_height="@dimen/marginTop_20dp"
                android:layout_gravity="center"
                android:src="@drawable/group_536" />

            <TextView
                android:id="@+id/text_bonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="500"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_4dp"
                android:layout_marginRight="@dimen/padding_4dp"
                android:gravity="top"
                android:text="New update available"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                android:visibility="visible"></TextView>

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_4dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/padding_4dp"
                android:gravity="center|left"
                android:text="New update available"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="visible"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/padding_2dp"
            android:padding="@dimen/padding_2dp"
            android:src="@drawable/calendar"
            android:tint="#2897BE" />

        <TextView
            android:id="@+id/from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTop_10dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:text="to" />

        <TextView
            android:id="@+id/to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTop_10dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:text="to" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_25sp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="@dimen/marginTop_10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sunday"
            android:layout_width="@dimen/text_size_25sp"
            android:layout_height="18dp"
            android:gravity="center"
            android:text="Sun"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_8dp" />

        <TextView
            android:id="@+id/monday"
            android:layout_width="@dimen/text_size_25sp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:gravity="center"
            android:text="Mon"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_8dp" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="@dimen/text_size_25sp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:gravity="center"
            android:text="Tue"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_8dp" />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="@dimen/text_size_25sp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:gravity="center"
            android:text="Wed"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_8dp" />

        <TextView
            android:id="@+id/thursday"
            android:layout_width="@dimen/text_size_25sp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:gravity="center"
            android:text="Thu"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_8dp" />

        <TextView
            android:id="@+id/friday"
            android:layout_width="@dimen/text_size_25sp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:gravity="center"
            android:text="Fri"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_8dp" />

        <TextView
            android:id="@+id/saturday"
            android:layout_width="@dimen/text_size_25sp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:gravity="center"
            android:text="Sat"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_8dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/text_alert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_4dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/padding_4dp"
        android:gravity="center"
        android:text="@string/create_redeem"
        android:textColor="@color/blue_green"
        android:textSize="@dimen/text_size_17sp"
        android:textStyle="normal"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50dp"
        android:layout_marginTop="@dimen/padding_4dp"
        android:layout_marginBottom="@dimen/padding_4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_40dp"
            android:layout_weight="0.4"
            android:background="@drawable/button_corner_edge_red"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Cancel"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_40dp"
            android:layout_weight="0.4"
            android:background="@drawable/button_corner_edge_green"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Ok"
            android:textColor="@color/white"

            />

    </LinearLayout>

</LinearLayout>